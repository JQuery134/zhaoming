<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/total"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ui_"
    android:orientation="vertical" 
    >

<RelativeLayout
    android:id="@+id/weather"
    android:layout_width="match_parent"
    android:layout_height="98dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="50dp"
    android:paddingLeft="30dp"
   >

    <RelativeLayout 
        android:id="@+id/weather_jj"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:paddingRight="30dp"
        android:layout_centerVertical="true"
        >
        <ImageView
            android:id="@+id/iv_weather" 
            android:layout_width="90dp"
            android:layout_height="140dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="3dp"
          />
	   <TextView 
	       android:id="@+id/tv_temperature"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:layout_marginTop="10dp"
	       android:hint="温度显示区"
	       android:layout_alignParentRight="true"
	       android:textColor="#FFF0F5"
	       android:textSize="15sp"
	     />
	   <TextView 
	       android:id="@+id/tv_shiDu"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       
	       android:layout_below="@+id/tv_temperature"
	       android:layout_marginTop="10dp"
	       android:textColor="#FFF0F5"
	       android:layout_centerHorizontal="true"
	       android:layout_alignParentRight="true"
	       android:hint="湿度显示"
	       
	       android:textSize="15sp"
	      />

	    <TextView 
	       android:id="@+id/tv_smoke"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:layout_centerHorizontal="true"
	       android:layout_below="@+id/tv_shiDu"
	     android:textColor="#FFF0F5"
	       android:hint="地点显示区"
	       android:layout_marginTop="10dp"
        android:textSize="15sp"
	        android:layout_alignParentRight="true"
	       />
	    
    </RelativeLayout>
    </RelativeLayout>

<RelativeLayout
    android:id="@+id/lights"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:layout_marginTop="25dp">

    <ImageButton
        android:id="@+id/button2"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/button1"
        android:layout_marginLeft="70dp"
        android:background="@android:color/transparent"
        android:onClick="click2" />

    
      <SeekBar
        android:id="@+id/timeline"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="110dp"
        android:maxHeight="4.0dip"
        android:minHeight="4.0dip"
        android:paddingLeft="16.0dip"
        android:paddingRight="16.0dip"
        android:progressDrawable="@drawable/po_seekbar"
        android:thumb="@drawable/seekbar_thumb" />
      
    <ImageButton
        android:id="@+id/button1"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="60dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:onClick="click1" />

    <SeekBar
        android:id="@+id/timeline1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:focusable="true"
     
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_marginTop="13dp"
        android:layout_below="@id/button1"
        android:maxHeight="4.0dip"
        android:minHeight="4.0dip"
        android:paddingLeft="16.0dip"
        android:paddingRight="16.0dip"
        android:progressDrawable="@drawable/po_seekbar"
        android:thumb="@drawable/seekbar_thumb" />
           
    <ImageButton
        android:id="@+id/button5"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_alignLeft="@+id/button1"
        android:layout_alignTop="@+id/button6"
        android:background="@android:color/transparent"
        android:onClick="click5" />

    
    
    <SeekBar
        android:id="@+id/timeline2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:layout_below="@+id/button6"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="50dp"
        android:maxHeight="4.0dip"
        android:minHeight="4.0dip"
        android:paddingLeft="16.0dip"
        android:paddingRight="16.0dip"
        android:progressDrawable="@drawable/po_seekbar"
        android:thumb="@drawable/seekbar_thumb" />
    
    <ImageButton
        android:id="@+id/button6"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_alignLeft="@+id/button2"
        android:layout_below="@+id/button2"
        android:layout_marginTop="36dp"
        android:background="@android:color/transparent"
        android:onClick="click6" />
 
    
    <SeekBar
        android:id="@+id/timeline3"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:focusable="true"
     
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_marginTop="3dp"
        android:layout_below="@id/button5"
        android:maxHeight="4.0dip"
        android:minHeight="4.0dip"
        android:paddingLeft="16.0dip"
        android:paddingRight="16.0dip"
        android:progressDrawable="@drawable/po_seekbar"
        android:thumb="@drawable/seekbar_thumb" />
           
</RelativeLayout>

 <LinearLayout
     android:id="@+id/roomname"
     android:layout_width="match_parent"
     android:layout_height="52dp"
     android:layout_marginTop="0dp"
     android:layout_marginLeft="50dp"
     android:layout_marginRight="88dp"
     android:orientation="vertical"
     >
     <TextView 
         android:id="@+id/roomname1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="100dp"
         android:layout_marginTop="40dp"
         
	       android:textColor="#8B7B8B"
	       android:textSize="40dp"
	      />
 </LinearLayout>
 
 
 <Button 
     android:text="手动控制模式"
     android:id="@+id/detail_button"
     android:layout_gravity="bottom"
     android:layout_height="wrap_content"
     android:layout_width="wrap_content"
     android:layout_marginTop="3dp"
     android:background="#00000000"
     android:layout_marginLeft="130dp"
     />
 

</LinearLayout>